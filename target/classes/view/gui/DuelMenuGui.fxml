<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.Color?>
<BorderPane prefHeight="600.0" prefWidth="880.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.gui.DuelMenuGui">

    <stylesheets>
        <URL value="@styles/DuelMenuGui.css"/>
    </stylesheets>

    <center>
        <Pane fx:id="fieldPane" prefHeight="600" prefWidth="570">
        </Pane>
    </center>

    <left>
        <HBox alignment="CENTER">
            <BorderPane prefHeight="600" prefWidth="210">
                <top>
                    <!--            opponent lp-->
                    <Rectangle height="50" width="210"/>
                </top>
                <center>
                    <VBox alignment="CENTER">
                        <HBox alignment="CENTER">
                            <Rectangle fx:id="selectedCard" height="307" width="210"/>
                        </HBox>
                        <HBox alignment="CENTER">
                            <Label fx:id="selectedCardDescription" alignment="TOP_LEFT" prefHeight="193" prefWidth="210"
                                   textAlignment="JUSTIFY" wrapText="true">
                                <padding>
                                    <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                                </padding>
                            </Label>
                        </HBox>
                    </VBox>
                </center>
                <bottom>
                    <!--            player lp-->
                    <Rectangle height="50" width="210"/>
                </bottom>
            </BorderPane>

            <BorderPane prefHeight="600" prefWidth="90" fx:id="buttonPane">
                <center>
                    <VBox alignment="CENTER">
                        <HBox>
                            <Button alignment="CENTER" prefHeight="26.0"
                                    prefWidth="80.0" text="Next Phase">
                                <cursor>
                                    <Cursor fx:constant="HAND"/>
                                </cursor>
                                <effect>
                                    <DropShadow>
                                        <color>
                                            <Color red="1.0" green="1.0" blue="1.0" opacity="0.15"/>
                                        </color>
                                    </DropShadow>
                                </effect>
                                <HBox.margin>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                </HBox.margin>
                            </Button>
                        </HBox>
                        <HBox>
                            <Button alignment="CENTER" prefHeight="26.0"
                                    prefWidth="80.0" text="Surrender">
                                <cursor>
                                    <Cursor fx:constant="HAND"/>
                                </cursor>
                                <effect>
                                    <DropShadow>
                                        <color>
                                            <Color red="1.0" green="1.0" blue="1.0" opacity="0.15"/>
                                        </color>
                                    </DropShadow>
                                </effect>
                                <HBox.margin>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                </HBox.margin>
                            </Button>
                        </HBox>
                        <HBox>
                            <Button alignment="CENTER" prefHeight="26.0"
                                    prefWidth="80.0" text="TEST">
                                <cursor>
                                    <Cursor fx:constant="HAND"/>
                                </cursor>
                                <effect>
                                    <DropShadow>
                                        <color>
                                            <Color red="1.0" green="1.0" blue="1.0" opacity="0.15"/>
                                        </color>
                                    </DropShadow>
                                </effect>
                                <HBox.margin>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                </HBox.margin>
                            </Button>
                        </HBox>
                    </VBox>
                </center>
            </BorderPane>
        </HBox>
    </left>

    <right>
        <!--        chatBox-->
    </right>


</BorderPane>
