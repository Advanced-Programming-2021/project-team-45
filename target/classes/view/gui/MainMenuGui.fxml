                    <effect>
                        <DropShadow spread="0.5">
                            <color>
                                <Color green="1.0" blue="0.8999999761581421"/>
                            </color>
                        </DropShadow>
                    </effect>
                </Button>
                <Button mnemonicParsing="false" onMouseClicked="#startShopMenu" prefHeight="26.0" prefWidth="100.0"
                        text="Shop">
                    <effect>
                        <DropShadow spread="0.5">
                            <color>
                                <Color red="0.8736461997032166" green="1.0"/>
                            </color>
                        </DropShadow>
                    </effect>
                </Button>
                <Button mnemonicParsing="false" onMouseClicked="#startImportExportMenu" prefHeight="26.0"
                        prefWidth="100.0" text="Import/Export">
                    <effect>
                        <DropShadow spread="0.5"/>
                    </effect>
                </Button>
                <Button mnemonicParsing="false" onMouseClicked="#logout" prefHeight="26.0" prefWidth="100.0"
                        text="Log out">
                    <effect>
                        <DropShadow spread="0.5">
                            <color>
                                <Color red="0.3547758162021637" green="0.08966861665248871" blue="0.42105263471603394"/>
                            </color>
                        </DropShadow>
                    </effect>
                </Button>
            </children>
        </VBox>
    </center>
