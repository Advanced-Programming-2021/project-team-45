                        <Image url="@Assets/Project-Assets-1.0.0/Assets/Logos/GUI_T_GateLogo_s001.dds.png"/>
                    </image>
                </ImageView>
                <Button mnemonicParsing="false" onMouseClicked="#startCartCreatorMenu" prefHeight="26" prefWidth="100"
                        text="Card Creator">
                    <effect>
                        <DropShadow spread="0.5">
                            <color>
                                <Color red="0.46237864762394" green="0.023486264242349" blue="0.8723467892364"/>
                            </color>
                        </DropShadow>
                    </effect>

                </Button>
                <Button mnemonicParsing="false" onMouseClicked="#startDuel" prefHeight="26.0" prefWidth="100.0"
                        text="Duel">
                    <effect>
                        <DropShadow spread="0.5">
                            <color>
                                <Color red="1.0"/>
                            </color>
                        </DropShadow>
                    </effect>
                </Button>
                <Button mnemonicParsing="false" onMouseClicked="#startDeckMenu" prefHeight="26.0" prefWidth="100.0"
                        text="Deck">
                    <effect>
                        <DropShadow spread="0.5">
                            <color>
                                <Color green="1.0" blue="0.16606497764587402"/>
                            </color>
                        </DropShadow>
                    </effect>
                </Button>
                <Button mnemonicParsing="false" onMouseClicked="#startScoreBoardMenu" prefHeight="26.0"
