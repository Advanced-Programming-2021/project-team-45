<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.shape.*?>

<BorderPane prefHeight="720.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.view.LoginMenuGui">

    <stylesheets>
        <URL value="@styles/LoginMenuGui.css"/>
    </stylesheets>


    <top>
        <HBox alignment="CENTER">
            <Rectangle fx:id="yugiohRect"/>
            <padding>
                <Insets bottom="20.0" top="20.0"/>
            </padding>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER">
            <VBox>
                <HBox alignment="CENTER">
                    <Label alignment="CENTER" prefHeight="26.0" prefWidth="60.0" text="username:">
                        <HBox.margin>
                            <Insets right="10.0"/>
                        </HBox.margin>
                    </Label>
                    <TextField fx:id="usernameSignUpTextBox" alignment="CENTER_LEFT" prefHeight="26.0" prefWidth="150.0"
                               promptText="username"/>
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER">
                    <Label alignment="CENTER" prefHeight="26.0" prefWidth="60.0" text="nickname:">
                        <HBox.margin>
                            <Insets right="10.0"/>
                        </HBox.margin>
                    </Label>
                    <TextField fx:id="nicknameSignUpTextBox" alignment="CENTER_LEFT" prefHeight="26.0" prefWidth="150.0"
                               promptText="nickname"/>
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER">
                    <Label alignment="CENTER" prefHeight="26.0" prefWidth="60.0" text="password:">
                        <HBox.margin>
                            <Insets right="10.0"/>
                        </HBox.margin>
                    </Label>
                    <TextField fx:id="passwordSignUpTextBox" alignment="CENTER_LEFT" prefHeight="26.0" prefWidth="150.0"
                               promptText="password"/>
                </HBox>
                <padding>
                    <Insets bottom="5.0"/>
                </padding>
            </VBox>

            <HBox alignment="CENTER">
                <Button fx:id="signUpButton" alignment="CENTER" onMouseClicked="#signUp" prefHeight="26.0"
                        prefWidth="80.0" text="Sign-up">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                    <effect>
                        <DropShadow>
                            <color>
                                <Color red="1.0" green="1.0" blue="1.0" opacity="0.15"/>
                            </color>
                        </DropShadow>
                    </effect>
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </HBox.margin>
                </Button>
                <padding>
                    <Insets bottom="10.0"/>
                </padding>
            </HBox>

            <VBox>
                <HBox alignment="CENTER">
                    <Label alignment="CENTER" prefHeight="26.0" prefWidth="60.0" text="username:">
                        <HBox.margin>
                            <Insets right="10.0"/>
                        </HBox.margin>
                    </Label>
                    <TextField fx:id="usernameLoginTextBox" alignment="CENTER_LEFT" prefHeight="26.0" prefWidth="150.0"
                               promptText="username"/>
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER">
                    <Label alignment="CENTER" prefHeight="26.0" prefWidth="60.0" text="password:">
                        <HBox.margin>
                            <Insets right="10.0"/>
                        </HBox.margin>
                    </Label>
                    <TextField fx:id="passwordLoginTextBox" alignment="CENTER_LEFT" prefHeight="26.0" prefWidth="150.0"
                               promptText="password"/>
                </HBox>
                <padding>
                    <Insets bottom="5.0"/>
                </padding>
            </VBox>

            <HBox alignment="CENTER">
                <Button fx:id="loginButton" alignment="CENTER" onMouseClicked="#login" prefHeight="26.0"
                        prefWidth="80.0" text="Login">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                    <effect>
                        <DropShadow>
                            <color>
                                <Color red="1.0" green="1.0" blue="1.0" opacity="0.15"/>
                            </color>
                        </DropShadow>
                    </effect>
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </HBox.margin>
                </Button>
                <padding>
                    <Insets bottom="10.0"/>
                </padding>
            </HBox>

            <HBox alignment="CENTER">
                <Button fx:id="exitButton" alignment="CENTER" onMouseClicked="#exit" prefHeight="26.0" prefWidth="80.0"
                        text="Exit">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                    <effect>
                        <DropShadow>
                            <color>
                                <Color red="1.0" green="1.0" blue="1.0" opacity="0.15"/>
                            </color>
                        </DropShadow>
                    </effect>
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </HBox.margin>
                </Button>
            </HBox>

            <padding>
                <Insets bottom="20.0"/>
            </padding>
        </VBox>
    </center>


</BorderPane>
