<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.gui.LoginMenuGui"
            prefHeight="720.0" prefWidth="1080.0">

    <top>
        <HBox alignment="CENTER">
            <Label alignment="CENTER" text="YU-GI-OH!" textAlignment="CENTER" textFill="#000000">
                <font>
                    <Font name="Arial Bold" size="18.0"/>
                </font>
            </Label>
            <padding>
                <Insets bottom="20.0" top="20.0"/>
            </padding>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER">
            <VBox>
                <HBox alignment="CENTER">
                    <Label alignment="CENTER" prefHeight="26.0" prefWidth="60.0" text="username:">
                        <HBox.margin>
                            <Insets right="10.0"/>
                        </HBox.margin>
                    </Label>
                    <TextField fx:id="usernameSignUpTextBox" alignment="CENTER_LEFT" prefHeight="26.0" prefWidth="150.0"
                               promptText="username"/>
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER">
                    <Label alignment="CENTER" prefHeight="26.0" prefWidth="60.0" text="nickname:">
                        <HBox.margin>
                            <Insets right="10.0"/>
                        </HBox.margin>
                    </Label>
                    <TextField fx:id="nicknameSignUpTextBox" alignment="CENTER_LEFT" prefHeight="26.0" prefWidth="150.0"
                               promptText="nickname"/>
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER">
                    <Label alignment="CENTER" prefHeight="26.0" prefWidth="60.0" text="password:">
                        <HBox.margin>
                            <Insets right="10.0"/>
                        </HBox.margin>
                    </Label>
                    <TextField fx:id="passwordSignUpTextBox" alignment="CENTER_LEFT" prefHeight="26.0" prefWidth="150.0"
                               promptText="password"/>
                </HBox>
                <padding>
                    <Insets bottom="5.0"/>
                </padding>
            </VBox>

            <HBox alignment="CENTER">
                <Button fx:id="signUpButton" alignment="CENTER" onMouseClicked="#signUp" prefHeight="26.0"
                        prefWidth="80.0" text="Sign-up">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                    <effect>
                        <DropShadow/>
                    </effect>
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </HBox.margin>
                </Button>
                <padding>
                    <Insets bottom="10.0"/>
                </padding>
            </HBox>

            <VBox>
                <HBox alignment="CENTER">
                    <Label alignment="CENTER" prefHeight="26.0" prefWidth="60.0" text="username:">
                        <HBox.margin>
                            <Insets right="10.0"/>
                        </HBox.margin>
                    </Label>
                    <TextField fx:id="usernameLoginTextBox" alignment="CENTER_LEFT" prefHeight="26.0" prefWidth="150.0"
                               promptText="username"/>
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER">
                    <Label alignment="CENTER" prefHeight="26.0" prefWidth="60.0" text="password:">
                        <HBox.margin>
                            <Insets right="10.0"/>
                        </HBox.margin>
                    </Label>
                    <TextField fx:id="passwordLoginTextBox" alignment="CENTER_LEFT" prefHeight="26.0" prefWidth="150.0"
                               promptText="password"/>
                </HBox>
                <padding>
                    <Insets bottom="5.0"/>
                </padding>
            </VBox>

            <HBox alignment="CENTER">
                <Button fx:id="loginButton" alignment="CENTER" onMouseClicked="#login" prefHeight="26.0"
                        prefWidth="80.0" text="Login">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                    <effect>
                        <DropShadow/>
                    </effect>
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </HBox.margin>
                </Button>
                <padding>
                    <Insets bottom="10.0"/>
                </padding>
            </HBox>

            <HBox alignment="CENTER">
                <Button fx:id="exitButton" alignment="CENTER" onMouseClicked="#exit" prefHeight="26.0"
                        prefWidth="80.0" text="Exit">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                    <effect>
                        <DropShadow/>
                    </effect>
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </HBox.margin>
                </Button>
            </HBox>

            <padding>
                <Insets bottom="20.0"/>
            </padding>
        </VBox>
    </center>


</BorderPane>
