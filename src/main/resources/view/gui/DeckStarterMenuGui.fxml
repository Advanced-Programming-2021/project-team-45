<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>


<AnchorPane prefHeight="720" prefWidth="1080" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.gui.DeckStarterMenuGui">
    <children>
        <ChoiceBox fx:id="chooseActiveDeck" layoutX="143.0" layoutY="290.0" prefWidth="150.0"/>
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="RED" height="39.0" layoutX="118.0" layoutY="232.0"
                   stroke="BLACK" strokeType="INSIDE" width="200.0"/>
        <Text fill="WHITE" layoutX="169.0" layoutY="255.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="chossse active deck"/>
        <ChoiceBox fx:id="chooseEditDeck" layoutX="413.0" layoutY="290.0" prefWidth="150.0"/>
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="RED" height="39.0" layoutX="388.0" layoutY="232.0"
                   stroke="BLACK" strokeType="INSIDE" width="200.0"/>
        <Text fill="WHITE" layoutX="433.0" layoutY="254.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="choosee a deck to edit"/>
        <Button layoutX="457.0" layoutY="334.0" mnemonicParsing="false" onMouseClicked="#editADeck" text="Edit Deck"/>
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="RED" height="39.0" layoutX="677.0" layoutY="231.0"
                   stroke="BLACK" strokeType="INSIDE" width="200.0"/>
        <Text fill="WHITE" layoutX="686.0" layoutY="254.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="enter a name for a deck to create it"/>
        <TextField fx:id="nameOfDeck" layoutX="727.0" layoutY="289.0" prefHeight="26.0" prefWidth="103.0"/>
        <Button layoutX="726.0" layoutY="334.0" mnemonicParsing="false" onMouseClicked="#createANewDeck"
                text="create new deck"/>
    </children>
</AnchorPane>
