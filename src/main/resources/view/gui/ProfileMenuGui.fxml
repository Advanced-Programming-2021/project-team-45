<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>

<AnchorPane id="profilePicture" fx:id="anchorPane" prefHeight="720" prefWidth="1080"
            style="-fx-background-color: #81fff3;" xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.gui.ProfileMenuGui">
    <children>
        <Button layoutX="90.0" layoutY="254.0" mnemonicParsing="false" onMouseClicked="#ChooseFile"
                text="Choose picture from system"/>
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#d4aaa2" height="162.0" layoutX="90.0" layoutY="72.0"
                   stroke="BLACK" strokeType="INSIDE" width="165.0"/>
        <ImageView id="r" fx:id="imageView" fitHeight="150.0" fitWidth="200.0" layoutX="97.0" layoutY="78.0"
                   pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@pictureFiles/unknownUserProfileImage.jpg"/>
            </image>
        </ImageView>
        <Text fx:id="usernameText" layoutX="309.0" layoutY="101.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Text"/>
        <Text fx:id="nicknameText" layoutX="309.0" layoutY="149.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Text"/>
        <TextField layoutX="390.0" layoutY="296.0"/>
        <Button layoutX="23.0" layoutY="22.0" mnemonicParsing="false" onMouseClicked="#back" text="Button"/>
        <Button layoutX="411.0" layoutY="334.0" mnemonicParsing="false" onMouseClicked="#changeNickname"
                text="change nickname"/>
        <TextField layoutX="390.0" layoutY="468.0"/>
        <TextField layoutX="390.0" layoutY="408.0"/>
        <Text layoutX="417.0" layoutY="284.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="set new nickname"/>
        <Text layoutX="382.0" layoutY="394.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="please enter your old password"/>
        <Text layoutX="380.0" layoutY="454.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="please enter your new password"/>
        <Button layoutX="401.0" layoutY="507.0" mnemonicParsing="false" onMouseClicked="#changePassword"
                text="change the password"/>
    </children>
</AnchorPane>
