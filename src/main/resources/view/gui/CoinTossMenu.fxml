<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="borderPane" prefHeight="720.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.gui.CoinTossMenu">

    <center>
        <VBox fx:id="vBox" alignment="CENTER" style="-fx-background-color: grey">

        </VBox>
    </center>
   <top>
      <HBox alignment="CENTER" prefHeight="80.0" prefWidth="1080.0" style="-fx-background-color: blue;" BorderPane.alignment="CENTER"
      fx:id="secondPlayerHBox">
         <children>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="second player: " fx:id="secondPlayerText">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Text>
         </children>
      </HBox>
   </top>
   <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: blue;" BorderPane.alignment="CENTER"
      fx:id="firstPlayerHBox">
         <children>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="first player: " fx:id="firstPlayerText">
               <font>
                  <Font name = "System Bold" size="24.0" />
               </font>
            </Text>
         </children>
      </HBox>
   </bottom>


</BorderPane>
